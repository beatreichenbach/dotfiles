(defpoll calendar_day
    :interval "1h"
    :initial 0
    "date +%d"
)
(defpoll calendar_year
    :interval "24h"
    :initial 0
    "date +%Y"
)

(defwindow calendar
    :monitor 1
	:geometry (geometry :x "0px" :y "0px" :anchor "top right")
    (calendar
        :class "calendar"
        :day calendar_day
        :year calendar_year
    )
)